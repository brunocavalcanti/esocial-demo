unit uInformacaoSH;

interface

uses
  Classes, SysUtils;

type
  TsoftwareHouse = class
  private
    Ftelefone_59: string;
    Femail_60: string;
    FnmRazao_57: string;
    FnmCont_58: string;
    FcnpjSoftHouse_56: string;
  public
    property cnpjSoftHouse_56: string read FcnpjSoftHouse_56 write FcnpjSoftHouse_56;
    property nmRazao_57: string read FnmRazao_57 write FnmRazao_57;
    property nmCont_58: string read FnmCont_58 write FnmCont_58;
    property telefone_59: string read Ftelefone_59 write Ftelefone_59;
    property email_60: string read Femail_60 write Femail_60;
    function gerarTX2(): WideString;
  end;

implementation

{ TsoftwareHouse }

function TsoftwareHouse.gerarTX2: WideString;
var
  Lista: TStringList;
begin
  Lista := TStringList.Create;
  Lista.Add('cnpjSoftHouse_56=' + cnpjSoftHouse_56);
  Lista.Add('nmRazao_57=' + nmRazao_57);
  if (Trim(email_60) <> EmptyStr) then
    Lista.Add('codMunic_49=' + email_60);

  Lista.Add('nmCont_58=' + nmCont_58);
  Lista.Add('telefone_59=' + telefone_59);
  Result := Lista.Text;
end;

end.

