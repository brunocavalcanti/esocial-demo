unit uInformacaoEmpregador;

interface

uses
  Classes,SysUtils;

type
  TinfoCadastro = class
  private
    FnmRazao_15: string;
    FindEtt_24: String;
    FindDesFolha_20: string;
    FindConstr_19: String;
    FclassTrib_16: string;
    FnatJurid_17: string;
    FindCoop_18: string;
    FnrRegEtt_25: String;
    FindEntEd_23: String;
    FindOptRegEletron_21: String;

  public
    property nmRazao_15: string read FnmRazao_15 write FnmRazao_15;
    property classTrib_16: string read FclassTrib_16 write FclassTrib_16;
    property natJurid_17: string read FnatJurid_17 write FnatJurid_17;
    property indCoop_18: string read FindCoop_18 write FindCoop_18;
    property indConstr_19: String read FindConstr_19 write FindConstr_19;
    property indDesFolha_20: string read FindDesFolha_20 write FindDesFolha_20;
    property indOptRegEletron_21: String read FindOptRegEletron_21 write FindOptRegEletron_21;
    property indEntEd_23: String read FindEntEd_23 write FindEntEd_23;
    property indEtt_24: String read FindEtt_24 write FindEtt_24;
    property nrRegEtt_25: String read FnrRegEtt_25 write FnrRegEtt_25;

    function gerarTX2():string;

  end;

implementation

{ TinfoCadastro }

function TinfoCadastro.gerarTX2: string;
var
  Lista : TStringList;
begin

  Lista := TStringList.Create;
  Lista.Add('nmRazao_15=' + nmRazao_15);
  Lista.Add('classTrib_16=' + classTrib_16);

  if (Trim(natJurid_17) <> EmptyStr) then
  Lista.Add('natJurid_17=' + natJurid_17);
//  if (Trim(fimValid_14) <> EmptyStr) then
//    Lista.Add('fimValid_14=' + FormatDateTime('YYYY-MM', StrToDateDef(fimValid_14, Now)));
  Result := Lista.Text;
end;

end.

